<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/txv_nome_main"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="20sp"

        android:layout_marginTop="40dp"
        android:padding="10sp"

        android:text="Nome"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_nome"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:minHeight="20sp"

        android:padding="10sp"
        android:textAlignment="center"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_nome_main" />

    <TextView
        android:id="@+id/txv_categoria_main"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="20sp"

        android:layout_marginTop="40dp"
        android:padding="10sp"

        android:text="Categoria"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_nome" />

    <TextView
        android:id="@+id/txv_categoria"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:minHeight="20sp"
        android:padding="10sp"

        android:textAlignment="center"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_categoria_main"
        />

    <TextView
        android:id="@+id/txv_preco_main"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="20sp"

        android:layout_marginTop="40dp"
        android:padding="10sp"

        android:text="PreÃ§o"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_categoria" />

    <TextView
        android:id="@+id/txv_preco"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:minHeight="20sp"
        android:padding="10sp"

        android:textAlignment="center"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_preco_main"
        />


</androidx.constraintlayout.widget.ConstraintLayout>